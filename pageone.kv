ScreenManager:
    ScreenOne:
        name: 'screen_one'
    ScreenTwo:
        name: 'screen_two'
    ScreenThree:
        name: 'screen_three'

<ScreenOne>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'Renya shooting Ryu'
            font_size: '80sp'
            size_hint: 1, 3

        Button:
            text: 'START'
            font_size: '65sp'
            size_hint: 1, 1.6
            on_press: root.change_screen()


<ScreenTwo>:
    FloatLayout:
        orientation: 'vertical'

        Label:
            id: game_start_label
            text: ""
            font_size: '90sp'
            color: (1, 1, 1, 1)
            size_hint:(1, 0.3)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}


<ScreenThree>:
    FloatLayout:
        orientation: 'vertical'

        Label:
            text: "RYU "
            font_size: '37sp'
            color: (1, 1, 1, 1)
            size_hint: (None, None)
            size: (100, 40)
            pos: 10, self.parent.height - 50
        
        Label:
            text: "CAT "
            font_size: '37sp'
            color: (1, 1, 1, 1)
            size_hint: (None, None)
            size: (100, 40)
            pos: 10, self.parent.height - 100
        
        Button:
            text: 'Back to Home'
            size_hint: (None, None)
            size: (150, 50)
            pos_hint: {'right': 1, 'top': 1}
            on_press: root.go_back()

